doctype html
html
  head
    title Reviews
    link(rel="stylesheet", href="/styles.css")
  body
    h1 User Reviews

    // Check if reviews exist
    if reviews && reviews.length > 0
      table
        thead
          tr
            th Review ID
            th User Name
            th Rating
            th Comment
        tbody
          each review in reviews
            tr
              // Display review ID
              td= review.review_id
              // Display the user's name
              td= review.name
              // Display rating as stars
              td= '⭐'.repeat(Math.round(review.rating))
              // Display review comment text
              td= review.COMMENT
    else
      p No reviews available.

    a.btn-back(href="/about") ← Back to About Page    
    footer
      p © 2025 RideShare Platform. All rights reserved.
